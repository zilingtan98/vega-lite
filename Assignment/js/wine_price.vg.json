{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Price for Each Wine Type",
    "width": 600,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/zilingtan98/vega-lite/main/Assignment/data/box_plot_wine_price_category.csv"
    },
    "encoding": {"y": {"field": "category", "type": "nominal", "title": "null"}},
    "layer": [
      {
        "mark": {"type": "rule"},
        "encoding": {
          "x": {
            "field": "min", 
            "type": "quantitative",
            "scale": {
                "zero": false
            }, 
            "title": null},
          "x2": {"field": "max"},
          "tooltip": [
            {"field": "category", "type": "nominal", "title": "Wine Type"},
            {"field": "min", "type": "quantitative", "title": "Min. Price ($)"},
            {"field": "max", "type": "quantitative", "title": "Max. Price ($)"},
            {"field": "median", "type": "quantitative", "title": "Median Price ($)"}
          ]
        }
      },
      {
        "mark": {"type": "bar", "size": 14},
        "encoding": {
          "x": {"field": "q1", "type": "quantitative"},
          "x2": {"field": "q3"},
          "color": {"field": "category", "type": "nominal", "legend": null},
          "tooltip": [
            {"field": "category", "type": "nominal", "title": "Wine Type"},
            {"field": "min", "type": "quantitative", "title": "Min. Price ($)"},
            {"field": "max", "type": "quantitative", "title": "Max. Price ($)"},
            {"field": "median", "type": "quantitative", "title": "Median Price ($)"}
          ]
        }
      },
      {
        "mark": {"type": "tick", "color": "white", "size": 200},
        "encoding": {
          "x": {"field": "median", "type": "quantitative"},
          "tooltip": [
            {"field": "category", "type": "nominal", "title": "Wine Type"},
            {"field": "min", "type": "quantitative", "title": "Min. Price ($)"},
            {"field": "max", "type": "quantitative", "title": "Max. Price ($)"},
            {"field": "median", "type": "quantitative", "title": "Median Price ($)"}
          ]
        }
      },
      {
        "mark": {"type": "point", "style": "boxplot-outliers"},
        "encoding": {
          "x": {"field": "outliers", "type": "quantitative"}, 
          "tooltip": [
            {"field": "category", "type": "nominal", "title": "Wine Type"},
            {"field": "min", "type": "quantitative", "title": "Min. Price ($)"},
            {"field": "max", "type": "quantitative", "title": "Max. Price ($)"},
            {"field": "median", "type": "quantitative", "title": "Median Price ($)"}
          ]
        }
      }
    ]
  }